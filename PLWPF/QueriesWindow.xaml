<Window x:Class="PLWPF.QueriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="בעל האתר - שאילתות" Height="auto" Width="auto"
        MinHeight="400" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        MaxHeight="500" MaxWidth="1100" FlowDirection="RightToLeft">
    <StackPanel Margin="10">
        <ComboBox SelectionChanged="cbQueries_SelectionChanged" Margin="0 0 0 10" Name="cbQueries" />
        <local:QueriesUserControl x:Name="QueryControl"  />
    </StackPanel>
</Window>
