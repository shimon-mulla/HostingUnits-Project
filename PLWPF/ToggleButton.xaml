<UserControl x:Class="PLWPF.ToggleButoon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PLWPF"
             mc:Ignorable="d" Height="20" Width="50">


    <UserControl.Resources>
        <Thickness x:Key="Thickness1">-43,0,0,0</Thickness>
        <Thickness x:Key="Thickness2">0,-43,0,0</Thickness>
    </UserControl.Resources>

    <Viewbox Margin="0,2,2,1">
        <Grid HorizontalAlignment="Left" Height="60" Margin="0" VerticalAlignment="Top" Width="115" Background="#FF8ABAC1">
            <Rectangle x:Name="Back" Fill="#FFA0A0A0" HorizontalAlignment="Left" Height="56" VerticalAlignment="Top" Width="107" Margin="2,2,0,0" RadiusY="29" RadiusX="29" MouseLeftButtonDown="Back_MouseLeftButtonDown"/>
            <Ellipse x:Name="Dot" Fill="White" HorizontalAlignment="Center" Height="56" VerticalAlignment="Center" Width="60" MouseLeftButtonDown="Dot_MouseLeftButtonDown" Margin="49,2,6,2"/>
        </Grid>
    </Viewbox>
</UserControl>



